<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <main>
        <% if (title) { %>
            <h1><%= title %></h1>
        <% } else { %>
            <%- res.redirect("/") %>
        <% } %>

        <%# messages() %> <!-- Placeholder for future messages -->

        <% if (inventory.length > 0) { %>
            <div class="inventory-grid">
                <% inventory.forEach(vehicle => { %>
                    <div class="vehicle-item">
                        <a href="/inv/detail/<%= vehicle.inv_id %>" title="View <%= vehicle.inv_make %> <%= vehicle.inv_model %>">
                            <img src="<%= vehicle.inv_thumbnail %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">

                        </a>
                        <h3><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
                        <p>Price: $<%= vehicle.inv_price.toLocaleString() %></p>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="notice">Sorry, no matching vehicles were found.</p>
        <% } %>
    </main>
</body>
</html>
