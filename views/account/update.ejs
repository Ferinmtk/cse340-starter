<h1>Update Account Information</h1>

<% if (locals.errors) { %>
    <div class="error"><%= locals.errors %></div>
<% } %>

<form action="/accounts/update" method="post">
    <label for="first_name">First Name:</label>
    <input type="text" name="first_name" id="first_name" value="<%= locals.account.first_name || '' %>" required>

    <label for="last_name">Last Name:</label>
    <input type="text" name="last_name" id="last_name" value="<%= locals.account.last_name || '' %>" required>

    <label for="email">Email:</label>
    <input type="email" name="email" id="email" value="<%= locals.account.email || '' %>" required>

    <input type="hidden" name="account_id" value="<%= locals.account.id %>">

    <button type="submit">Update Account</button>
</form>


<h2>Change Password</h2>

<form action="/accounts/update-password" method="post">
    <label for="password">New Password:</label>
    <input type="password" name="password" id="password" required>
    <p>Password must be at least 8 characters long and include a mix of letters and numbers.</p>

    <input type="hidden" name="account_id" value="<%= locals.account.id %>">
    
    <button type="submit">Change Password</button>
</form>
